<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.codecrew.mememate.activity.SettingsActivity">

    <ScrollView
        android:id="@+id/scrollView2"
        android:layout_width="394dp"
        android:layout_height="680dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="bottom"
            android:orientation="vertical"
            android:padding="15dp">

            <Button
                android:id="@+id/email_change_button"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:onClick="changeEmail"
                android:text="@string/change_your_email"
                android:enabled="false"/>

            <Button
                android:id="@+id/password_reset_button"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:onClick="passwordReset"
                android:text="@string/reset_password" />

            <Button
                android:id="@+id/logout_button"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:onClick="logout"
                android:text="@string/log_out" />

            <Button
                android:id="@+id/delete_account_button"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:onClick="deleteUser"
                android:text="@string/delete_your_account" />
        </LinearLayout>
    </ScrollView>

</android.support.constraint.ConstraintLayout>
